<%- include('../partials/header.ejs')%>
<main class="container-fluid">
    <div class="row justify-content-center p-5">
      <div class="col-sm-6 justify-content-center">
        <div class="card p-5 border-info">
          <h4 class="text-center">Edit Trade Item</h4>
          <form action="/trades/<%=story.id%>?_method=PUT" method = 'POST'>
            <label>Category</label>
            <input
              type="text"
              class="form-control mb-3"
              placeholder="Enter Category"
              name = "Category"
              value = "<%=category.catName%>"
            />   
            <label>Category Image Url</label>
              <input type="text" class="form-control mb-3" placeholder="Enter Category Image Url" name = "Category_Img"
              value="<%=category.bgImg%>"/>                     
            <label>Title</label>
            <input
              type="text"
              class="form-control mb-3"
              placeholder="Enter title"
              name = "title"
              value = "<%=story.title%>"
            />
            <label>Sub Title</label>
            <input
              type="text"
              class="form-control mb-3"
              placeholder="Enter sub title"
              name = "sub_title"
              value = "<%=story.sub_title%>"
            />              
            <label>Product Image Url</label>
            <input type="text" class="form-control mb-3" placeholder="Enter Product Image Url" name = "Product_Img"
             value = "<%=story.Img%>"/>
            <label>Description</label>
            <textarea class="form-control" cols="30" rows="7" name = "Desc"><%=story.Desc%></textarea>           
            <input class="btn btn-primary mt-3" type="submit" value="Submit">
          </form>
        </div>
      </div>
    </div>
  </main>
<%- include('../partials/footer.ejs')%>