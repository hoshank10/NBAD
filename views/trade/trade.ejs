<%- include('../partials/header.ejs')%>

    <main class="container-fluid">
      <div class="row mt-5 ml-5 pl-3">
        <div class="col-sm-3 image">
          <%if(story){%>
          <img src="<%=story.Img%>" class="img-fluid rounded" alt="image" />
        </div>
        <div class="col-sm-5 mt-2 title">        
          <h4><%=story.title%></h4>
          <div class="row">
            <div class="col-sm-10">
              <h6><%=story.sub_title%></h6>
              <p class="mt-3">            
                <%=story.Desc%>                
              </p>
            </div>
          </div>          
        </div>
        <div class="col-sm-4 ques mt-3">
          <h6>Are you interested in this book?</h6>
          <div class="row mt-2">
            <div class="col-sm-8 buttons">
              <button class="btn btn-success">Trade It</button>
              <button class="btn btn-primary">Rate It</button>
              <h6 class="mt-3">Actions:</h6>
              <form>
                <button class="btn btn-info" type="submit" formmethod="GET" formaction="/trades/<%=story.id%>/edit">Edit</button>
                <button class="btn btn-danger" type="submit" formmethod="POST" formaction="/trades/<%=story.id%>?_method=DELETE">
                  Delete</button>
              </form>
            </div>
          </div>
        </div>
        <%}%>
      </div>      
    </main>
    <%- include('../partials/footer.ejs')%>